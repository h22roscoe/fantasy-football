doctype html
include ./include/head.pug

body(style={'padding-top': '80px'})
  div.container-fluid
    div.page-header.text-center(style={"padding-bottom": "10px"})
      h1
        span.fa.fa-user
        | &#32;
        = user.username

      div.row-fluid
        a(href="/logout") Logout

    div.row-fluid
      div.col-sm-3.col-sm-offset-3.text-center
        if user.player
          a.btn.btn-primary(
            href="players/" + user.player + "/edit") Edit your player
        else
          a.btn.btn-primary(href="players/new") Create your player

      div.col-sm-3.text-center
        if user.team
          a.btn.btn-primary(
            href="teams/" + user.team + "/edit") Edit your team
        else
          a.btn.btn-primary(href="teams/new") Create your team

    div.row-fluid(style={'padding-top': '60px'})
      div.col-sm-10.col-sm-offset-1
        table.table.table-responsive.table-striped
          thead
            th Team name
            th Owner
            th Points
          tbody
            tr
              td Fake team name data
              td Me
              td 101

  include ./include/footer

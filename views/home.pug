doctype html
include ./include/head.pug

body(style={'padding-top': '80px'})
  div.container-fluid
    div.page-header.text-center(style={"padding-bottom": "10px"})
      h1
        span.fa.fa-user
        | &#32;
        = user.username

      br

      a.btn.btn-default.btn-sm(href="/logout") Logout

    div.row-fluid.text-center
      // TODO: Should be an if here for when they already have player/team
      div.col-sm-6
        button.btn.btn-primary(
          type="button",
          data-toggle="modal",
          data-target="#teamModal") Create your team
      include ./include/teamModal

      // TODO: Should be an if here for when they already have player/team
      div.col-sm-6
        button.btn.btn-primary(
          type="button",
          data-toggle="modal",
          data-target="#playerModal") Create your player
      include ./include/playerModal

      // Display the table here.
  include ./include/footer

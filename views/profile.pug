doctype html
include ./include/head.pug

body(style={'padding-top': '80px'})
  div.container
    div.page-header.text-center
      h1
        span.fa.fa-anchor
        |  Profile Page
      a.btn.btn-default.btn-sm(href="/logout") Logout

    div.row
      div.col-sm-6.col-sm-offset-3
        div.well
          h3
            span.fa.fa-user
            |  Local
          p
            strong id
            |:&#32;
            = user._id
          p
            strong username
            |:&#32;
            = user.local.username
          p
            strong password
            |:&#32;
            = user.local.password
